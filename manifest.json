{
  "manifest_version": 2,

  "name": "DxRef Demo",
  "description": "This extension is a web-clipper prototype for the DxRef project",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon_048.png"    
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "permissions": [
    "tabs",
    "activeTab",
    "*://*/*"
  ]
